{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,

    "baseUrl": ".",
    "paths": {
      "#server/*": ["server/*"],
      "#client/*": ["src/*"],
      "#shared/*": ["shared/*"]
    },

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },


  "include": []
